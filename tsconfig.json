{
  "compilerOptions": {
    "target": "ES6",                // or 'ES5', 'ES2015', etc.
    "module": "commonjs",           // or 'ESNext', 'ES6', etc.
    "jsx": "react-jsx",             // Use 'react' if using React 16 or below, or 'react-jsx' for React 17+
    "declaration": true,            // Generate .d.ts files for type declarations
    "outDir": "./dist",             // Output directory for compiled files
    "rootDir": "./src",             // Root directory of input files
    "strict": true,                 // Enable all strict type-checking options
    "esModuleInterop": true,        // Enables emit interoperability between CommonJS and ES Modules
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src"],               // Include all files in the `src` folder
  "exclude": ["node_modules", "dist"] // Exclude node_modules and dist folders
}
